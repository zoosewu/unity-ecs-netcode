# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
# All files
[*]
indent_style = space
# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2
# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2
trim_trailing_whitespace = true
# IDE1006
#
dotnet_naming_symbols.pascal_case_symbol.applicable_kinds = namespace,class,struct,interface,method,delegate,type_parameter
dotnet_naming_symbols.pascal_case_symbol.applicable_accessibilities = *

dotnet_naming_style.pascal_case_style.capitalization = pascal_case

dotnet_naming_rule.pascal_case_rule.symbols = pascal_case_symbol
dotnet_naming_rule.pascal_case_rule.style = pascal_case_style
dotnet_naming_rule.pascal_case_rule.severity = error
#
dotnet_naming_symbols.camel_case_symbol.applicable_kinds = property,field,local,local_function,parameter,event
dotnet_naming_symbols.camel_case_symbol.applicable_accessibilities = *

dotnet_naming_style.camel_case_style.capitalization = camel_case

dotnet_naming_rule.camel_case_rule.symbols = camel_case_symbol
dotnet_naming_rule.camel_case_rule.style = camel_case_style
dotnet_naming_rule.camel_case_rule.severity = error
#
dotnet_naming_symbols.enum_symbol.applicable_kinds = enum
dotnet_naming_symbols.enum_symbol.applicable_accessibilities = *

dotnet_naming_style.enum_style.capitalization = pascal_case
dotnet_naming_style.enum_style.required_prefix = ENUM_

dotnet_naming_rule.enum_rule.symbols = enum_symbol
dotnet_naming_rule.enum_rule.style = enum_style
dotnet_naming_rule.enum_rule.severity = error
